<Page x:Class="WPFApp_Navigation.DocumentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DocumentsPage">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Go Back" Foreground="Blue" Cursor="Hand"
                       MouseLeftButtonUp="GoBack_Click" Margin="0,0,0,10"/>

            <ListBox x:Name="DocumentListBox" Height="100" SelectionChanged="DocumentListBox_SelectionChanged"/>

            <TextBox x:Name="DocumentNameBox" Text="Document Name" Foreground="Gray" Margin="0,10"
         GotFocus="Placeholder_GotFocus" LostFocus="Placeholder_LostFocus"/>

            <DatePicker x:Name="DeadlinePicker" Margin="0,10"/>

            <CheckBox x:Name="ReminderCheck" Content="Set Reminder" Margin="0,5"/>

            <TextBox x:Name="NotesBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Save" Width="100" Click="Save_Click" Margin="5"/>
                <Button x:Name="DeleteButton" Content="Delete" Width="100" Click="Delete_Click" Margin="5" Visibility="Collapsed"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Add Scan" Width="100" Click="AddScan_Click" Margin="5"/>
                <Button Content="View Scan" Width="100" Click="ViewScan_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
