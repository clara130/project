<Page x:Class="WPFApp_Navigation.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="WelcomePage">
    <Grid Background="#f0f0f0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="LastCall" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Because life doesn't come with automatic reminders" FontSize="14" Margin="0,5,0,20" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Login" Width="100" Margin="5" Click="Login_Click"/>
                <Button Content="Sign Up" Width="100" Margin="5" Click="SignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
