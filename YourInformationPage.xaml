<Page x:Class="WPFApp_Navigation.YourInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="YourInformationPage">
    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Go Back -->
            <TextBlock Text="Go Back" FontSize="14" Foreground="Blue" Cursor="Hand"
                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,20"
                       MouseLeftButtonUp="GoBack_Click"/>

            <!-- Main Info Section -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Profile Picture -->
                <Ellipse Width="120" Height="120" Stroke="Gray" StrokeThickness="1">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>
                <Button Content="Change Profile Picture (.jpg only, &lt; 2MB)" Margin="0,10,0,20"
                        Click="ChangeProfilePicture_Click"/>

                <!-- Editable Fields -->
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Email address" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10"/>
                    <TextBox x:Name="EmailTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                    <TextBlock Text="" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                    <Button x:Name="TogglePasswordSectionButton" Content="Change Password" Grid.Row="2" Grid.ColumnSpan="2"
                            Margin="0,10,0,10" Click="TogglePasswordSection_Click"/>

                    <StackPanel x:Name="PasswordSection" Grid.Row="3" Grid.ColumnSpan="2" Visibility="Collapsed">
                        <TextBlock Text="New Password" Margin="0,0,10,5"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Confirm Password" Margin="0,0,10,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
                    </StackPanel>
                </Grid>

                <Button Content="Save Changes" Width="150" Margin="0,20,0,0" Click="SaveChanges_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>