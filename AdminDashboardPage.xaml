<Page x:Class="WPFApp_Navigation.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AdminDashboardPage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Admin Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Total Documents:" FontWeight="Bold"/>
            <TextBlock x:Name="DocumentCountText" Margin="0,0,0,10"/>

            <TextBlock Text="Users:" FontWeight="Bold"/>
            <ListBox x:Name="UserListBox" Height="200" DisplayMemberPath="Value" SelectedValuePath="Key"/>
            <Button Content="Delete Selected User" Click="DeleteUser_Click" Margin="0,10,0,0" Background="Red" Foreground="White"/>

            <Button Content="Go Back" Click="GoBack_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
