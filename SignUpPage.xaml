<Page x:Class="WPFApp_Navigation.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignUpPage">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Email:" Margin="0,5,0,0"/>
            <TextBox Name="EmailTextBox" Width="200" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Confirm Password:"/>
            <PasswordBox Name="ConfirmPasswordBox" Width="200" Height="30" Margin="0,0,0,20"/>

            <Button Content="Sign Up" Width="100" Click="SignUp_Click"/>
        </StackPanel>

        <TextBlock Text="Go back" Foreground="Blue" Cursor="Hand"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="10" MouseLeftButtonUp="Back_Click"/>
    </Grid>
</Page>
