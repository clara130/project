<Page x:Class="WPFApp_Navigation.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UserPage">
    <Grid Margin="20">
        <!-- Go Back Button -->
        <TextBlock Text="Go Back" FontSize="14" Foreground="Blue" Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" MouseLeftButtonUp="GoBack_Click"/>

        <!-- Profile Picture -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0">
            <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill" />
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>

        <!-- Options Stack -->
        <StackPanel VerticalAlignment="Top" Margin="0,170,0,0" HorizontalAlignment="Center" Width="250" >
            <Button Content="Your Information" Click="GoToInformation_Click" Height="35"/>
            <Button Content="Ringtone" Click="GoToRingtone_Click" Height="35"/>
            <Button Content="Help" Click="GoToHelp_Click" Height="35"/>
            <Button Content="Privacy and Permissions" Click="GoToPrivacy_Click" Height="35"/>
            <Button Content="Delete Your Account" Click="GoToDelete_Click" Height="35" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Page>