<Page x:Class="WPFApp_Navigation.ForgottenPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ForgottenPasswordPage">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox Name="EmailTextBox" Width="200" Height="30" Margin="0,0,0,10"/>

            <Button Content="Reset Password" Width="150" Click="ResetPassword_Click" Margin="0,10,0,0"/>
        </StackPanel>

        <TextBlock Text="Go back" Foreground="Blue" Cursor="Hand"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="10" MouseLeftButtonUp="Back_Click"/>
    </Grid>
</Page>
