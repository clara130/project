<Page x:Class="WPFApp_Navigation.DeleteAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DeleteAccountPage">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >
            <TextBlock Text="⚠ All data will be lost if you delete your account." 
                       FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBlock Text="Are you sure?" FontSize="14" Margin="0,0,0,20"/>
            <Button Content="Delete Account" Width="150" Background="Red" Foreground="White"
                    Click="DeleteAccount_Click" Margin="0,0,0,10"/>
            <TextBlock Text="Go back" Foreground="Blue" Cursor="Hand"
                       MouseLeftButtonUp="GoBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
